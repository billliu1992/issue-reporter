extends base

block head_includes
	link(rel='stylesheet', href='/stylesheets/reporter.css')
	title Issue Reporter

block content
	#issue-entries
		each issue in issues
			.issue-entry
				.left-wrapper
					//Placeholder
					span.issue-votes 0
				.right-wrapper
					.top-wrapper
						span.issue-name=issue["name"]
					.bottom-wrapper
						span.issue-priority Priority #{issue["priority"]}
						//Placeholder
						span.issue-reporter-user Placeholder Name

		.issue-entry
			a(href="create") Create a new Issue
