extends base

block head_includes
	link(rel='stylesheet', href='/stylesheets/reporter.css')
	title Issue Reporter

block content
	#left-wrapper
		#side-bar.content-block
			span Projects
			each project in projects
				.project-entry
					a(href="/project/#{project.slug}/") #{project.name}
					#{project.name}
			.project-entry
				a(href="/project/create") Create new Project

	#right-wrapper
		#issue-entries.content-block
			if issues.length == 0
				.issue-entry No issues
			each issue in issues
				.issue-entry
					.left-wrapper
						//Placeholder
						span.issue-votes 0
					.right-wrapper
						.top-wrapper
							span.issue-name=issue["name"]
						.bottom-wrapper
							span.issue-priority Priority #{issue["priority"]}
							//Placeholder
							span.issue-reporter-user Placeholder Name
